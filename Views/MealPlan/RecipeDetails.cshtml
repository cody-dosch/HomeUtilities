@model HomeUtilities.Models.MealPlan.RecipeDetailsViewModel
@{
    ViewData["Title"] = $"Recipe Details - {Model.Title}";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>@Model.Title</h1>            
            <div class="row recipe-image-row">
                <div class="col-sm-12">
                    <img src="@Model.ImageUrl" class="recipe-image" />
                </div>
            </div>         
            <div class="row recipe-summary-row">
                <div class="col-sm-12">
                    <h3>Summary:</h3>
                    @Html.Raw(Model.Summary)
                </div>
            </div>           
            <div class="row recipe-ingredients-and-instructions-row">
                <div class="col-sm-6">
                    <h3>Ingredients:</h3>
                    <ul>
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li>@ingredient</li>
                        }
                    </ul>
                </div>
                <div class="col-sm-6">
                    <h3>Instructions:</h3>
                    <ol>
                        @foreach (var instruction in Model.Instructions)
                        {
                            <li>@instruction</li>
                        }
                    </ol>
                </div>
            </div>           
        </div>
    </div>
</div>
